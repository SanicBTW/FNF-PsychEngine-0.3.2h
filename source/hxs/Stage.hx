        if (stageBuild.exists("onCreate"))
            stageBuild.get("onCreate")();
        trace('Module Stage $stage loaded');
        #else
        trace("Module Stage is not supported on HTML5 targets, building stage from code");

        switch (curStage)
		{
			case 'stage': // Week 1
