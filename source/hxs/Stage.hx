				CoolUtil.precacheSound('thunder_2');

			case 'philly': // Week 3
				if (!SaveData.get(LOW_QUALITY))
				{
					var bg:BGSprite = new BGSprite('philly/sky', -100, 0, 0.1, 0.1);
					add(bg);
				}

